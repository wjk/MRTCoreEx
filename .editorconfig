# editorconfig.org
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.*proj]
indent_size = 2

[*.{xml,manifest,appxmanifest,stylecop,resx,ruleset,props,targets,tasks,config,nuspec}]
indent_size = 2

[*.{c,cc,cpp,idl,h,inl}]
indent_style = tab
